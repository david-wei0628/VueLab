@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div id="app2">
  <h4>Count: {{ count }}</h4>
  <button v-on:click="count++">Plus</button>
  <button v-on:click="count = 0">Reset</button>
  
  <div class="wrap" style="color :#ffff">
    <div v-if="count === 0" style="background-color: #f00;">Block A</div>
    <div v-else-if="count < 5" style="background-color: green">Block B</div>
    <div v-else-if="count < 15" style="background-color: #f0f">Block S</div>
    <div v-else style="background-color: #00f;">Block C</div>
  </div>
</div>

